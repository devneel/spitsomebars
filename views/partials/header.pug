.navbar.navbar-default.navbar-fixed-top
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/')
        i.fa.fa-hand-peace-o
        | Spit Some Bars
    .collapse.navbar-collapse
      ul.nav.navbar-nav
        li(class=(title == 'See Bars') ? 'active' : undefined)
          a(href='/') See Bars
        li(class=(title == 'Spit Bars') ? 'active' : undefined)
          a(href='/spit-bars') Spit Bars
        if user && user.isAdmin
          li(class=(title == 'Admin') ? 'active' : undefined)
            a(href='/admin') Admin

          
        
      ul.nav.navbar-nav.navbar-right
        if !user
          li(class=(title == 'Login') ? 'active' : undefined)
            a(href='/login') Login

        else
          li.dropdown(class=(title == 'Account Management') ? 'active' : undefined)
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span Whatup, 
              span= user.rappaname || user.profile.name || user.email || user.id
              i.caret
            ul.dropdown-menu
              li
                a(href='/my-bars') My Bars
              li
                a(href='/account') Me
              li.divider
              li
                a(href='/logout') Logout
